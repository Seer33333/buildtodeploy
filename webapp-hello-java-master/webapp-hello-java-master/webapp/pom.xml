<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <!-- WARNING: DO NOT MODIFY THIS FILE! This file was generated by mvngen #af50f1250c -->
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>biz.descom.hellojava</groupId>
    <artifactId>root</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>webapp</artifactId>
  <name>Webapp Hello Java :: Webapp</name>
  <description>WAR and Docker Image</description>
  <packaging>war</packaging>
  <organization>
    <name>Descom Consulting Ltd.</name>
  </organization>
  <scm>
    <connection>scm:git:https://remigius_stalder@bitbucket.org/remigius_stalder/webapp-hello-java.git</connection>
  </scm>

  <properties>
    <projectRoot>..</projectRoot>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>${war.plugin.version}</version>
        <configuration>
          <workDirectory>${basedir}/target/overlays</workDirectory>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <addClasspath>false</addClasspath>
            </manifest>
            <manifestEntries>
              <Specification-Title>${project.name}</Specification-Title>
              <Specification-Version>${project.version}</Specification-Version>
              <Specification-Vendor>Descom Consulting Ltd.</Specification-Vendor>
              <Implementation-Title>${project.name}</Implementation-Title>
              <Implementation-Version>${project.version}-${buildNumber}</Implementation-Version>
              <Implementation-Vendor>Descom Consulting Ltd.</Implementation-Vendor>
              <Build-Date>${maven.build.timestamp}</Build-Date>
              <Build-Maven>${project.groupId}:${project.artifactId}:${project.version}</Build-Maven>
              <Build-Repo-URL>${build.repo.url}</Build-Repo-URL>
              <Build-Repo-Commit>${build.repo.commit}</Build-Repo-Commit>
              <Build-Repo-Branch>${build.repo.branch}</Build-Repo-Branch>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${resources.plugin.version}</version>
        <executions>
          <execution>
            <id>webapp-copy-docker-resources</id>
            <phase>package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/docker-context</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/target</directory>
                  <includes>
                    <include>webapp-${project.version}.war/**</include>
                  </includes>
                </resource>
                <resource>
                  <directory>${basedir}/docker</directory>
                  <includes>
                    <include>Dockerfile</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <version>${dockerfile.plugin.version}</version>
        <executions>
          <execution>
            <id>webapp-docker-file</id>
            <phase>package</phase>
            <goals>
              <goal>build</goal>
              <goal>tag</goal>
              <goal>push</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <contextDirectory>${basedir}/target/docker-context</contextDirectory>
          <writeTestMetadata>false</writeTestMetadata>
          <repository>remigius65/webapp-hello-java</repository>
          <tag>${build.repo.commit}</tag>
        </configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/filtered</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
  </build>

  <dependencies>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>${servlet.api.version}</version>
    </dependency>
    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>${postgresql.jdbc.version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>
</project>
